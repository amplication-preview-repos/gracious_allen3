datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Item {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String?
  price     Float?
  quantity  Int?
  receipt   Receipt? @relation(fields: [receiptId], references: [id])
  receiptId String?
  updatedAt DateTime @updatedAt
}

model Receipt {
  createdAt  DateTime  @default(now())
  customer   Customer? @relation(fields: [customerId], references: [id])
  customerId String?
  date       DateTime?
  id         String    @id @default(cuid())
  items      Item[]
  total      Float?
  updatedAt  DateTime  @updatedAt
}

model Customer {
  createdAt DateTime  @default(now())
  email     String?
  id        String    @id @default(cuid())
  name      String?
  receipts  Receipt[]
  updatedAt DateTime  @updatedAt
}
